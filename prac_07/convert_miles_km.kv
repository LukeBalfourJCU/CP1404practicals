BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_text
            text: ''
        BoxLayout:
            orientation: 'vertical'
            Button:
                id: button_up
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                id: button_down
                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
        id: button_calculate
        text: 'Convert m to km'
        on_press: app.calculate_conversion()
    Label:
        id: output_label
        text: ''
        color: (1, 1, 0, 1)
